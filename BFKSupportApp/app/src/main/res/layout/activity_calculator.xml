<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">

  <EditText
      android:id="@+id/calNumInput1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:ems="10"
      android:hint="First Number"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/CalNumInput2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:ems="10"
      android:hint="Second Number"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="@+id/calNumInput1"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/calNumInput1"
      app:layout_constraintTop_toBottomOf="@+id/calNumInput1" />

  <Button
      android:id="@+id/CalAdd"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="104dp"
      android:text="Add"
      app:layout_constraintEnd_toEndOf="@+id/CalNumInput2"
      app:layout_constraintStart_toStartOf="@+id/CalNumInput2"
      app:layout_constraintTop_toBottomOf="@+id/CalNumInput2" />

  <TextView
      android:id="@+id/CalNumOutput"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="96dp"
      android:includeFontPadding="false"
      android:textSize="60sp"
      app:layout_constraintEnd_toEndOf="@+id/CalAdd"
      app:layout_constraintHorizontal_bias="0.516"
      app:layout_constraintStart_toStartOf="@+id/CalAdd"
      app:layout_constraintTop_toBottomOf="@+id/CalAdd" />

  <Button
      android:id="@+id/CalBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginBottom="16dp"
      android:text="back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>