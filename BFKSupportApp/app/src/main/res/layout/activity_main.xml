<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MainToCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MainStickBug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="StickBug"
        app:layout_constraintEnd_toEndOf="@+id/MainToCal"
        app:layout_constraintStart_toStartOf="@+id/MainToCal"
        app:layout_constraintTop_toBottomOf="@+id/MainToCal" />

    <Button
        android:id="@+id/MainDataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Database"
        app:layout_constraintEnd_toEndOf="@+id/MainStickBug"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/MainStickBug"
        app:layout_constraintTop_toBottomOf="@+id/MainStickBug" />

</androidx.constraintlayout.widget.ConstraintLayout>